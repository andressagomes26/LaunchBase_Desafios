{% extends "layout.njk" %}

{% block head %}
    <title>Cadastrar Professor(a)</title>
{% endblock %}

{% block content %}
    <div class="card">
        <section class ='avatar' style='background:url("https://source.unsplash.com/collection/10553730/500x500") no-repeat center center / cover'></section>
        <section class="details">
            <form method='POST' action='/teachers?_method=PUT'>
                <h3>Novo Professor</h3>

                {% include 'teachers/fields.njk' %}                
                <input type="hidden" name="id" value='{{ professor.id }}'>
            </form>

            <form class='form2' method='POST' action="/teachers?_method=DELETE">
                <button type="submit">Deletar</button>
                <input type="hidden" name="id" value='{{ professor.id }}'>
            </form>
   
        </section>
    </div>
{% endblock %}