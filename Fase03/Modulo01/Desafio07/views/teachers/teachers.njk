{% extends "layout.njk" %}

{% block head %}
    <title>Teachers</title>
{% endblock %}

{% block content %}

    <div class="card card-table">
        <a class='button-novo' href="/teachers/create">Novo</a>
        <table width='100%'>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for prof in professor %}
                    <tr>
                        <td>
                            <span style='background-image:url({{prof.avatar_url}})'></span>
                            {{prof.name}}
                        </td>
                        <td>
                            {% for a in prof.area %}
                                <span class='area'>{{ a }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="/teachers/{{prof.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}