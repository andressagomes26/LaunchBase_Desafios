{% extends "layout.njk" %}

{% block head %}
    <title>Teachers</title>
{% endblock %}

{% block content %}

    <div class="card card-table">
        
        <div class="header">
            <!--class='button-novo'-->
            <a class='button-novo' href="/teachers/create">Novo</a>
            <form action="/teachers" method="get">
                <input type="text" name='filter' placeholder='Nome ou Área de Atuação'>
                <button class='button-novo' type="submit">Filtrar</button>
            </form>
        </div>
        
        
        <table width='100%'>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Área de Atuação</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for prof in professor %}
                    <tr>
                        <td>
                            <span style='background-image:url({{prof.avatar_url}})'></span>
                            {{prof.name}}
                        </td>
                        <td>
                            {% for a in prof.area %}
                                <span class='area'>{{ a }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            {{prof.total_students}}
                        </td>
                        <td>
                            <a href="/teachers/{{prof.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-total = {{pagination.total}}
            data-page = {{pagination.page}}
            data-filter = {{pagination.filter}}
        ></div>
    </div>

{% endblock %}