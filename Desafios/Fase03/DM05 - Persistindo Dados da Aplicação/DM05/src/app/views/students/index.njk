{% extends "layout.njk" %}

{% block tituloPage%}
    <title>Teachers</title>
{% endblock%}

{% block content%}
    <div class="card card-table">
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Email</th>
                    <th>Ano escolar</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr>
                        <td>{{student.name}}</td>
                        <td>{{student.email}}</td>
                        <td>{{student.schoolYear}}</td>
                        <td><a href="/students/{{student.id}}">Ver</a></td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
    </div>
{% endblock %}