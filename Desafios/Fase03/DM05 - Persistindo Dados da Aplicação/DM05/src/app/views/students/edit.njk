{% extends "layout.njk" %}

{% block tituloPage%}
    <title>Edição de Estudantes</title>
{% endblock%}

{% block content%}
<div class="card">
    <section style="background: url({{student.avatar}}) no-repeat center center / cover"></section>
    
    <section class="detalhes">
        <div class="title">
            <h3>Editar Aluno</h3>
        </div>
        <form method="POST" action="/students?_method=PUT">
            <input type="hidden" name="id" value={{student.id}}>
            {% include 'students/fields.njk' %}
        </form>    
        <form id='form-delete' class="include" method="POST" action="/students?_method=DELETE">
            <input type="hidden" name="id" value={{student.id}}>
                <button id="button-delete" type="submit">Deletar</button>
            </span>
        </form>

        {% include '../confirm.njk' %}

    </section>
    
</div>
{% endblock %}