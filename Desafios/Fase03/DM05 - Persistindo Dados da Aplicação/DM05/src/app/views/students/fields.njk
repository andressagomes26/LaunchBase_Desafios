<!-- Avatar URL -->
<div class="item one">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar" 
        placeholder="http://"
        value="{{student.avatar}}">
    </div>
</div>

<!-- Nome -->
<div class="item">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" 
        value="{{student.name}}">
    </div>
</div>

<!-- Email -->
<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" 
        value="{{student.email}}">
    </div>
</div>

<!-- Nascimento -->
<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth"
        value="{{student.birth}}">
    </div>
</div>

<!-- Ano Escolar -->
<div class="item">    
    <div>Ano Escolar</div>
    <div>
        <select name="schoolYear">
            <option value="5F" {% if student.schoolYear == 5F %} selected {% endif %}>
                5° ano Ensino Fundamental
            </option>
            <option value="6F" {% if student.schoolYear == 6F %} selected {% endif %}>
                6° ano Ensino Fundamental
            </option>
            <option value="7F" {% if student.schoolYear == 7F %} selected {% endif %}>
                7° ano Ensino Fundamental
            </option>
            <option value="8F" {% if student.schoolYear == 8F %} selected {% endif %}>
                8° ano Ensino Fundamental
            </option>
            <option value="9F" {% if student.schoolYear == 9F %} selected {% endif %}>
                9° ano Ensino Fundamental
            </option>
            <option value="1M" {% if student.schoolYear == 1M %} selected {% endif %}>
                1° ano Ensino Médio
            </option>
            <option value="2M" {% if student.schoolYear == 2M %} selected {% endif %}>
                2° ano Ensino Médio
            </option>
            <option value="3M" {% if student.schoolYear == 3M %} selected {% endif %}>
                3° ano Ensino Médio
            </option>
        </select>
    </div>
</div>

<!-- Carga horária -->
<div class="item">
    <div>Carga horária Semanal</div>
    <div>
        <input type="number" name="carga" 
        value="{{student.carga}}">
    </div>
</div>

<span class='button-grid'>
    <button type="submit">Salvar</button>
