{% extends "layout.njk" %}

{% block tituloPage%}
    <title>Teachers</title>
{% endblock%}

{% block content%}
    <div class="card card-table">
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>{{teacher.name}}</td>
                        <td>
                            {% for area in teacher.area %}
                                <span>{{area}}</span>
                            {% endfor %}
                        </td>
                        <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
    </div>
{% endblock %}