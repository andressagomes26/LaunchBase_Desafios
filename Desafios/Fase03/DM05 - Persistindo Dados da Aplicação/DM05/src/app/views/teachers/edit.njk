{% extends "layout.njk" %}

{% block tituloPage%}
    <title>Edição de Professores</title>
{% endblock%}

{% block content%}
<div class="card">
    <section style="background: url({{teacher.avatar}}) no-repeat center center / cover"></section>
   
    <section class="detalhes">
        <div class="title">
            <h3>Editar Professor</h3>
        </div>
        <form method="POST" action="/teachers?_method=PUT">
            <input type="hidden" name="id" value={{teacher.id}}>
            {% include 'teachers/fields.njk' %}
        </form>    
        <form id='form-delete' class="include" method="POST" action="/teachers?_method=DELETE">
            <input type="hidden" name="id" value={{teacher.id}}>
                <button id="button-delete" type="submit">Deletar</button>
            </span>
        </form>

        {% include '../confirm.njk' %}
    </section>
</div>
{% endblock %}