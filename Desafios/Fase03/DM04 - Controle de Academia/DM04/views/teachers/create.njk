{% extends "layout.njk" %}

{% block tituloPage%}
    <title>Cadastro de Professores</title>
{% endblock%}

{% block content%}
    <form class="card" method="POST" action="/teachers">
        <section class="imagem"></section>
        <section class="detalhes">
            <div class="title">
                <h3>Cadastrar Professor</h3>
            </div>

            <div class="item one">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url">
                </div>
            </div>
            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name">
                </div>
            </div>
            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>
            <div class="item">    
                <div>Grau de escolaridade</div>
                <div>
                    <select name="education">
                        <option name="education" value="EnsinoMedioCompleto">Ensino Médio Completo</option>
                        <option name="education" value="EnsinoSuperiorCompleto">Ensino Superior Completo</option>
                        <option name="education" value="Mestrado">Mestrado</option>
                        <option name="education" value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">    
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="typeClass" value="P" checked>Presencial</span>
                    <span><input type="radio" name="typeClass" value="D">À distância</span>
                </div>
            </div>
            <div class="item">    
                <div>Área de atuação</div>
                <div><input type="text" name="area"></div>
            </div>
           <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock %}